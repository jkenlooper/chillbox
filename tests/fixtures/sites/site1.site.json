{
  "name": "Site One",
  "release": "https://example.test/this_whole_string_is_replaced_with_an_absolute_file_path_in_terra.sh",
  "contact": {
    "owner": "site1@example.test",
    "technical": "site1@example.test"
  },
  "server_name": "site1.example.chill.box",
  "domain_list": [
    "site1.example.chill.box"
  ],
  "env": [
    {
      "name": "CHILL_STATIC",
      "value": "http://localhost:5000"
    },
    {
      "name": "CHILL_DYNAMIC",
      "value": "http://localhost:5001"
    },
    {
      "name": "API",
      "value": "http://localhost:8084"
    },
    {
      "name": "IMMUTABLE_EXAMPLE_URI",
      "value": "/immutable-example/v1/$IMMUTABLE_EXAMPLE_HASH/"
    },
    {
      "name": "IMMUTABLE_EXAMPLE",
      "value": "https://$IMMUTABLE_BUCKET_DOMAIN_NAME/$SLUGNAME/immutable/immutable-example/$IMMUTABLE_EXAMPLE_HASH/"
    },
    {
      "name": "IMMUTABLE_EXAMPLE_HASH",
      "value": "replaced-with-cmd-to-get-hash",
      "cmd": "md5sum ./Makefile | cut -d' ' -f1"
    }
  ],
  "crontab": [
    "13 5 * * 6 echo 'do something'"
  ],
  "services": [
    {
      "name": "api",
      "lang": "flask",
      "handler": "api",
      "secrets_config": "api-bridge.secrets.cfg",
      "secrets_export_dockerfile": "api-bridge.secrets.Dockerfile",
      "environment": [
        {
          "name": "PORT",
          "value": "8084"
        },
        {
          "name": "FLASK_APP",
          "value": "site1_api.app"
        }
      ]
    },
    {
      "name": "chillstatic",
      "lang": "chill",
      "handler": "chill-static-example",
      "environment": [
        {
          "name": "freeze",
          "value": "true"
        },
        {
          "name": "CHILL_HOST",
          "value": "localhost"
        },
        {
          "name": "CHILL_PORT",
          "value": "5000"
        }
      ]
    },
    {
      "name": "chilldynamic",
      "lang": "chill",
      "handler": "chill-dynamic-example",
      "environment": [
        {
          "name": "freeze",
          "value": "false"
        },
        {
          "name": "CHILL_HOST",
          "value": "localhost"
        },
        {
          "name": "CHILL_PORT",
          "value": "5001"
        }
      ]
    }
  ]
}
