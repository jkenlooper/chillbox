{
  "name": "Site One",
  "release": "https://example.test/this_whole_string_is_replaced_with_an_absolute_file_path_in_terra.sh",
  "contact": {
    "owner": "site1@example.test",
    "technical": "site1@example.test"
  },
  "server_name": "site1.example.chill.box",
  "domain_list": [
    "site1.example.chill.box"
  ],
  "env": [
    {
      "name": "SITE1_SERVER_NAME",
      "value": "$server_name"
    },
    {
      "name": "SITE1_SERVER_PORT",
      "value": "$server_port"
    },
    {
      "name": "SITE1_PROXY_INTERCEPT_ERRORS",
      "value": "on"
    },
    {
      "name": "SITE1_VERSION",
      "value": "$version"
    },
    {
      "name": "SITE1_PROXY_CACHE_VALID",
      "value": "1y"
    },
    {
      "name": "SITE1_CHILL_STATIC",
      "value": "http://localhost:5000"
    },
    {
      "name": "SITE1_CHILL_DYNAMIC",
      "value": "http://localhost:5001"
    },
    {
      "name": "SITE1_API",
      "value": "http://localhost:8084"
    },
    {
     "name": "SITE1_IMMUTABLE__EXAMPLE",
     "value": "$S3_ENDPOINT_URL$IMMUTABLE_BUCKET_NAME/$slugname/$version/example/"
    }
  ],
  "crontab": [
    "13 5 * * 6 echo 'do something'"
  ],
  "services": [
    {
      "name": "api",
      "lang": "flask",
      "handler": "api",
      "secrets_config": "api-bridge.secrets.cfg",
      "secrets_export_dockerfile": "api-bridge.secrets.Dockerfile",
      "environment": [
        {
          "name": "SERVER_NAME",
          "value": "$server_name"
        },
        {
          "name": "PORT",
          "value": "8084"
        },
        {
          "name": "FLASK_APP",
          "value": "site1_api.app"
        }
      ]
    },
    {
      "name": "chillstatic",
      "lang": "chill",
      "handler": "chill-static-example",
      "environment": [
        {
          "name": "freeze",
          "value": "true"
        },
        {
          "name": "CHILL_HOST",
          "value": "localhost"
        },
        {
          "name": "CHILL_PORT",
          "value": "5000"
        }
      ]
    },
    {
      "name": "chilldynamic",
      "lang": "chill",
      "handler": "chill-dynamic-example",
      "environment": [
        {
          "name": "freeze",
          "value": "false"
        },
        {
          "name": "CHILL_HOST",
          "value": "localhost"
        },
        {
          "name": "CHILL_PORT",
          "value": "5001"
        }
      ]
    }
  ]
}
