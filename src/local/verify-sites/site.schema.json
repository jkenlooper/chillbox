{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://chillbox.massive.xyz/site.json",
  "type": "object",
  "required": [
    "name",
    "server_name",
    "release",
    "contact",
    "domain_list"
  ],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "title": "The name schema",
      "description": "Name of site."
    },
    "server_name": {
      "type": "string",
      "title": "Canonical server name",
      "description": "Set to a FQDN"
    },
    "version": {
      "type": "string",
      "title": "Version of the site",
      "description": "The value is replaced here with the output of the 'make inspect.VERSION' command if that has been defined."
    },
    "contact": {
      "type": "object",
      "title": "The contact schema",
      "description": "Contact",
      "required": [
        "owner",
        "technical"
      ],
      "properties": {
        "owner": {
          "type": "string",
          "title": "The owner schema",
          "description": ""
        },
        "technical": {
          "type": "string",
          "title": "The technical schema",
          "description": ""
        }
      },
      "additionalProperties": false
    },
    "release": {
      "type": "string",
      "title": "Release tar.gz file",
      "description": "The URL or absolute file path of the release in a tar.gz format."
    },
    "domain_list": {
      "type": "array",
      "title": "The domain_list schema",
      "description": "",
      "additionalItems": true,
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "env": {
      "type": "array",
      "title": "The env schema",
      "description": "",
      "additionalItems": true,
      "items": {
        "type": "object",
        "title": "Name/value",
        "description": "",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "title": "The name schema",
            "description": ""
          },
          "value": {
            "type": "string",
            "title": "The value schema",
            "description": "An optional value to set."
          },
          "cmd": {
            "type": "string",
            "title": "The command for the value",
            "description": "An optional command to use to fill in the value at build time."
          }
        },
        "additionalProperties": false
      }
    },
    "crontab": {
      "type": "array",
      "title": "The crontab schema",
      "description": "",
      "additionalItems": true,
      "items": {
        "type": "string"
      }
    },
    "services": {
      "type": "array",
      "title": "The services schema",
      "description": "",
      "additionalItems": true,
      "items": {
        "type": "object",
        "title": "The first anyOf schema",
        "description": "",
        "required": [
          "name",
          "lang",
          "handler",
          "environment"
        ],
        "properties": {
          "name": {
            "type": "string",
            "title": "The name schema",
            "description": ""
          },
          "lang": {
            "type": "string",
            "title": "The lang schema",
            "description": ""
          },
          "handler": {
            "type": "string",
            "title": "The handler schema",
            "description": ""
          },
          "secrets_config": {
            "type": "string",
            "title": "The secrets_config schema",
            "description": ""
          },
          "environment": {
            "type": "array",
            "title": "The environment schema",
            "description": "",
            "additionalItems": true,
            "items": {
              "type": "object",
              "title": "Name/value",
              "description": "",
              "required": [
                "name",
                "value"
              ],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string",
                  "title": "The name schema",
                  "description": ""
                },
                "value": {
                  "type": "string",
                  "title": "The value schema",
                  "description": ""
                }
              }
            }
          }
        }
      }
    }
  }
}
